
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // A specific, non-existent document path that is allowed to be read by anyone.
    // This is a safe way to check if the client can reach the database.
    match /connectivity-test/{docId} {
      allow read: if true;
    }

    // WARNING: The rest of the rules are insecure for production.
    // They are for debugging and initial development purposes.
    // TODO: Secure these rules before deploying to a production environment.
    match /test_02/{docId} {
      allow read, write: if true;
    }
    match /users/{userId} {
      allow read, write: if true;
    }
    match /teams/{teamId} {
      allow read, write: if true;
    }
    match /standings/{standingId} {
        allow read, write: if true;
    }
    match /previousSeasonStandings/{standingId} {
        allow read, write: if true;
    }
    match /predictions/{userId} {
        allow read, write: if true;
    }
    match /playerTeamScores/{scoreId} {
      allow read, write: if true;
    }
    match /userHistories/{userId} {
        allow read, write: if true;
    }
    match /weeklyTeamStandings/{standingId} {
        allow read, write: if true;
    }
    match /teamRecentResults/{resultId} {
        allow read, write: if true;
    }
    match /monthlyMimoM/{awardId} {
        allow read, write: if true;
    }
    match /seasonMonths/{monthId} {
        allow read, write: if true;
    }
    match /matches/{matchId} {
      allow read, write: if true;
    }
  }
}
