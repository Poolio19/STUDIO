
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access for foundational data.
    // This allows listing the entire collection, which is needed by the app.
    match /teams/{teamId} {
      allow read: if true;
      allow write: if false;
    }
    
    match /previousSeasonStandings/{standingId} {
      allow read: if true;
      allow write: if false;
    }
    
    match /matches/{matchId} {
       allow read: if true;
       allow write: if false;
    }

    // Allow any authenticated user to read game and user data.
    // This includes anonymous users, which is necessary for the app to load for new visitors.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /standings/{standingId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /playerTeamScores/{scoreId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /userHistories/{userId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    match /weeklyTeamStandings/{standingId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /teamRecentResults/{resultId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    match /monthlyMimoM/{awardId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /seasonMonths/{monthId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Predictions can be read by any authenticated user, but only written by the owner.
    match /predictions/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny for any other path not explicitly matched.
    // This is a security best practice.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
