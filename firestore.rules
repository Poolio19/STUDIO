
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read access to all users, but write access only to authenticated users.
    // This is a temporary, permissive rule for seeding.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow read access to all users, but write access only to authenticated users.
    match /teams/{teamId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow read access to all users, but write access only to authenticated users.
    match /standings/{teamId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /events/{eventId} {
      allow read: if true;
      allow write: if false; 
    }

    match /users/{userId}/predictions/{predictionId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    match /leaderboard/{leaderboardEntryId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
