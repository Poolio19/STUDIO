rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper to check if the user is the administrator (Jim Poole)
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'jim.poole@prempred.com';
    }

    // Helper to check if the user is accessing their own data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // A specific, non-existent document path that is allowed to be read by anyone.
    match /connectivity-test/{docId} {
      allow read: if true;
    }

    // User Profiles: Anyone can read, but only owner or admin can write
    match /users/{userId} {
      allow read: if true;
      allow write: if isAdmin() || isOwner(userId);
    }

    // Teams: Anyone can read, only admin can write
    match /teams/{teamId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Standings & History: Anyone can read, only admin can write
    match /standings/{standingId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /previousSeasonStandings/{standingId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /userHistories/{userId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /weeklyTeamStandings/{standingId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /teamRecentResults/{resultId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /playerTeamScores/{scoreId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Predictions: Anyone can read, but only owner or admin can write
    match /predictions/{userId} {
        allow read: if true;
        allow write: if isAdmin() || isOwner(userId);
    }

    // Awards & Months: Anyone can read, only admin can write
    match /monthlyMimoM/{awardId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /seasonMonths/{monthId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Matches: Anyone can read, only admin can write
    match /matches/{matchId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Forum Messages: Must be logged in to read/create. Only author or admin can update/delete.
    match /messages/{messageId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
    }
  }
}