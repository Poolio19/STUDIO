
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access for several collections.
    // Writes are generally disallowed from the client, except for predictions.
    match /teams/{teamId} {
      allow read: if true;
      allow write: if false;
    }
    
    match /previousSeasonStandings/{standingId} {
      allow read: if true;
      allow write: if false;
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /standings/{standingId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /playerTeamScores/{scoreId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /userHistories/{userId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    match /weeklyTeamStandings/{standingId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /teamRecentResults/{resultId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    match /monthlyMimoM/{awardId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /seasonMonths/{monthId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Predictions can be created/updated by the logged-in user for their own document
    match /predictions/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Matches are readable by anyone, but only updatable via admin flows.
    match /matches/{matchId} {
       allow read: if true;
       allow write: if false;
    }

    // Default deny for any other path not explicitly matched
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
