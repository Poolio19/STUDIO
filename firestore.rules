rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rule: Allow public read access to foundational data collections.
    // This includes LISTING the collection, not just getting individual documents.
    match /teams/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    match /previousSeasonStandings/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    match /matches/{document=**} {
       allow read: if true;
       allow write: if false;
    }

    // Rule: Allow any authenticated user (including anonymous) to read all
    // other game and user-related data collections.
    match /users/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; 
    }
    match /standings/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /playerTeamScores/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /userHistories/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /weeklyTeamStandings/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /teamRecentResults/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /monthlyMimoM/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /seasonMonths/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Rule: Allow users to read any prediction, but only write to their own.
    // This uses a wildcard to match the specific user's document ID.
    match /predictions/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
