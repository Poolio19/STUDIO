
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, list: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    match /predictions/{userId} {
      allow list: if isAuthenticated();
      allow read: if isAuthenticated() && isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    match /playerTeamScores/{scoreId} {
        allow read, list: if isAuthenticated();
        allow create, update, delete: if isAuthenticated() && isOwner(request.resource.data.userId);
    }

    match /userHistories/{userId} {
        allow read, list: if isAuthenticated();
        allow write: if isOwner(userId);
    }

    match /teams/{teamId} {
      allow read, list: if isAuthenticated();
    }

    match /standings/{standingId} {
      allow read, list: if isAuthenticated();
    }

    match /previousSeasonStandings/{standingId} {
      allow read, list: if isAuthenticated();
    }

     match /weeklyTeamStandings/{standingId} {
      allow read, list: if isAuthenticated();
    }

    match /teamRecentResults/{resultId} {
      allow read, list: if isAuthenticated();
    }

    match /monthlyMimoM/{awardId} {
      allow read, list: if isAuthenticated();
    }
    
    match /seasonMonths/{monthId} {
      allow read, list: if isAuthenticated();
    }

    match /matches/{matchId} {
      allow read, list: if isAuthenticated();
    }
    
    // Default deny all writes to public collections
    match /{collection}/{doc} {
        allow write: if false;
    }
  }
}

    