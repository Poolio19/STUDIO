rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    //------------------------------------------------//
    // PUBLIC, READ-ONLY COLLECTIONS                  //
    //------------------------------------------------//
    
    match /teams/{teamId} {
      allow read: if true;
      allow write: if false;
    }

    match /standings/{standingId} {
      allow read: if true;
      allow write: if false;
    }

    match /previousSeasonStandings/{standingId} {
      allow read: if true;
      allow write: if false;
    }

    match /matches/{matchId} {
      allow read: if true;
      allow write: if false;
    }
    
    match /weeklyTeamStandings/{standingId} {
      allow read: if true;
      allow write: if false;
    }

    match /teamRecentResults/{resultId} {
      allow read: if true;
      allow write: if false;
    }

    match /seasonMonths/{monthId} {
      allow read: if true;
      allow write: if false;
    }

    match /monthlyMimoM/{awardId} {
      allow read: if true;
      allow write: if false;
    }

    //------------------------------------------------//
    // AUTHENTICATED-ACCESS COLLECTIONS               //
    //------------------------------------------------//
    
    // Any authenticated user can read all user profiles and all individual team scores.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if false; 
    }

    match /playerTeamScores/{scoreId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Any authenticated user can read any prediction.
    // A user can only WRITE to their OWN prediction document.
    match /predictions/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // A user can only READ their OWN history document.
    match /userHistories/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }
  }
}
