rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can only update their own profile. Anyone authenticated can read profiles.
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Predictions can only be created or updated by the owner.
    // Authenticated users can read all predictions for the consensus page.
    match /predictions/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Player team scores can only be managed by the owner.
    match /playerTeamScores/{scoreId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if isAuthenticated() && isOwner(request.resource.data.userId);
    }

    // User history can only be managed by the owner.
    match /userHistories/{userId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
    }

    // Read-only collections for all authenticated users.
    // These are managed by server-side processes, not by clients.
    match /teams/{teamId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    match /standings/{standingId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    match /previousSeasonStandings/{standingId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
     match /weeklyTeamStandings/{standingId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    match /teamRecentResults/{resultId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    match /monthlyMimoM/{awardId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    match /seasonMonths/{monthId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    match /matches/{matchId} {
      allow read: if isAuthenticated();
      allow write: if false; // Match results are updated by the server
    }

    // Explicitly allow list operations for authenticated users on these collections
    match /teams/{wildcard=**} {
      allow list: if isAuthenticated();
    }
    match /standings/{wildcard=**} {
      allow list: if isAuthenticated();
    }
    match /weeklyTeamStandings/{wildcard=**} {
      allow list: if isAuthenticated();
    }
    match /teamRecentResults/{wildcard=**} {
      allow list: if isAuthenticated();
    }
    match /matches/{wildcard=**} {
      allow list: if isAuthenticated();
    }
  }
}
