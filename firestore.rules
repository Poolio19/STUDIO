
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC DATA: Allow public read access for foundational data.
    // This allows listing the entire collection, which is needed by the app.
    match /teams/{teamId} {
      allow read: if true;
      allow write: if false;
    }
    match /previousSeasonStandings/{standingId} {
      allow read: if true;
      allow write: if false;
    }
    match /matches/{matchId} {
       allow read: if true;
       allow write: if false;
    }

    // AUTHENTICATED READS: Allow any authenticated user (including anonymous)
    // to read all other game and user-related data.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if false; // Can be changed later for user profile updates
    }
    match /standings/{standingId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /playerTeamScores/{scoreId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /userHistories/{userId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /weeklyTeamStandings/{standingId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /teamRecentResults/{resultId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /monthlyMimoM/{awardId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /seasonMonths/{monthId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // USER-SPECIFIC WRITES: Predictions can be read by any authenticated user, 
    // but only written by the owner.
    match /predictions/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny for any other path not explicitly matched.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

    