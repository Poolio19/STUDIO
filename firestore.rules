
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC, READ-ONLY COLLECTIONS
    // Allow anyone to read (get and list) these collections.
    // This is necessary for the app to load initial data without race conditions.
    match /teams/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    match /previousSeasonStandings/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    match /matches/{document=**} {
       allow read: if true;
       allow write: if false;
    }
    match /standings/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    match /weeklyTeamStandings/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    match /teamRecentResults/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    match /seasonMonths/{document=**} {
      allow read: if true;
      allow write: if false;
    }
     match /monthlyMimoM/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // AUTHENTICATED READS / RESTRICTED WRITES
    
    // ANY authenticated user can read player scores and user profiles.
    // This is needed for leaderboards, stats pages, etc.
    // Writes remain blocked.
    match /playerTeamScores/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /users/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; 
    }

    // A user can read ANY user's prediction, but can only WRITE to their own.
    match /predictions/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // A user can only read THEIR OWN history document.
    match /userHistories/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }
  }
}
