
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access for teams and previous season standings
    match /teams/{teamId} {
      allow read: if true;
      allow write: if false;
    }
    
    match /previousSeasonStandings/{standingId} {
      allow read: if true;
      allow write: if false;
    }

    // Secure all other collections by default
    // Predictions can be created/updated by the logged-in user for their own document
    match /predictions/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow admins (not yet defined, so currently no one) to update matches
    match /matches/{matchId} {
       allow read: if true;
       allow write: if false; // To be secured later
    }

    // Default deny for any other path not explicitly matched
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
