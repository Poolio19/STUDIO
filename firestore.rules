rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Publicly readable collections
    match /teams/{teamId} {
      allow read: if true;
      allow write: if false; // Managed by admin/import flows
    }

    match /users/{userId} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    match /standings/{standingId} {
      allow read: if true;
      allow write: if false; // Managed by admin/import flows
    }

    match /previousSeasonStandings/{standingId} {
      allow read: if true;
      allow write: if false; // Managed by admin/import flows
    }
    
    match /playerTeamScores/{scoreId} {
      allow read: if true;
      allow write: if false; // Managed by scoring flows
    }

    match /userHistories/{userId} {
      allow read: if true;
      allow write: if false; // Managed by scoring flows
    }
    
    match /weeklyTeamStandings/{standingId} {
        allow read: if true;
        allow write: if false; // Managed by scoring flows
    }

    match /teamRecentResults/{resultId} {
        allow read: if true;
        allow write: if false; // Managed by scoring flows
    }

    match /monthlyMimoM/{awardId} {
        allow read: if true;
        allow write: if false; // Managed by scoring flows
    }

    match /seasonMonths/{monthId} {
        allow read: if true;
        allow write: if false; // Managed by import flows
    }

    match /matches/{matchId} {
        allow read: if true;
        allow write: if false; // Managed by admin/import flows
    }
    
    // Predictions can be read by anyone (for consensus page)
    // but only written by the specific user for their own document.
    match /predictions/{userId} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
